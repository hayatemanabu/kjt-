void nhap(float &a, float &b)
{
	cout << "Nhap cac he so a, b :";
	cin >> a >> b;
}

void giaibpt(float a, float b)
{
	if (a > 0) cout << "Nghiem x>" << -b / a;
	else if (a < 0) cout << "Nghiem x<" << -b / a;
	else if (b > 0) cout << "Vo so nghiem";
	else cout << "Vo nghiem";
